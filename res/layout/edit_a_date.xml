<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialogHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date:" android:paddingLeft="3dp"/>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="wrap_content">
        <DatePicker android:id="@+id/datePicker" android:layout_width="fill_parent" android:layout_height="wrap_content"></DatePicker>
        <TimePicker android:id="@+id/timePicker" android:layout_width="fill_parent" android:layout_height="wrap_content"></TimePicker>
    </LinearLayout>
</LinearLayout>
